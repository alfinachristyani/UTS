<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFood">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="300dp"
        android:background="@color/white"
        android:id="@+id/imgfood"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="20dp"
        android:text="@string/detailnama"
        android:id="@+id/tagfoodNama"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tagfoodNama"
        android:text="@string/detail"
        android:id="@+id/tagfoodDetail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tagfoodDetail"
        android:text="@string/harga"
        android:id="@+id/tagfoodHarga"/>
</RelativeLayout>